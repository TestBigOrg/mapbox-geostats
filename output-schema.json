{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "type": "object",
  "properties": {
    "layers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/layer"
      }
    }
  },

  "definitions": {
    "layer": {
      "type": "object",
      "properties": {
        "layer": {
          "type": "string",
        },
        "count": {
          "type": "number",
          "minimum": 0
        },
        "attributeCount": {
          "type": "number",
          "minimum": 0,
          "maximum": 1000
        },
        "attributes": {
          "type": "array",
          "maxItems": 100,
          "items": {
            "$ref": "#/definitions/attribute"
          }
        }
      },
      "required": ["layer", "count", "attributeCount", "attributes"]
    },
    "attribute": {
      "type": "object",
      "properties": {
        "attribute": {
          "type": "string"
        },
        "count": {
          "type": "number",
          "minimum": 0
        },
        "type": {
          "enum": ["String", "Number", "Boolean", "Null"]
        },
        "values": {
          "type": "array",
          "maxItems": 100,
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/value"
          }
        },
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        }
      },
      "required": ["attribute", "count", "type", "values"]
    },
    "value": {
      "type": ["string", "number", "boolean", "null"],
      "maxLength": 256
    }
  }
}
